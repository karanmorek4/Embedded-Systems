#include <LiquidCrystal.h>
void fun_delay(int x);

LiquidCrystal lcd(12, 11, 10, 9, 8, 7);

long int tme = 0;
int motorPin = 3;
int buttonPin = 4;


void setup() {

  lcd.begin(16, 2);
  pinMode(motorPin, OUTPUT);
  pinMode(buttonPin, INPUT);

}

void loop()
{
  lcd.setCursor(0, 1);
  lcd.print("Count: ");
  lcd.print(tme);
  tme += 1;

  if (digitalRead(buttonPin) == HIGH)
  {
    digitalWrite(motorPin, HIGH);
    fun_delay(10);
  }
  else {
    digitalWrite(motorPin, LOW);
  }

  delay(600);
}

void fun_delay(int x)
{
  while (x--)
  {
    lcd.setCursor(0, 1);
    lcd.print("Count: ");
    lcd.print(tme);
    tme += 1;
    delay(600);
  }
  return ;
}
