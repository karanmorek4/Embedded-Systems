// libraries
#include<stdio.h>


float laptop_price[5]={12230.50,65878.34,65777.89,87970.76,67890.60};
//       index       =    0        1        2        3        4


//starting the main program
int main ()
{
  //initalising the variable with zero 
  int laptopid =0;
  
  // the for loop starts form the initalized value of laptopid and follows till 5
  for(laptopid = 0 ; laptopid<5;laptopid++)
	{
    //prints the statement
	  printf("  laptop id  %d\t laptop price =%.2f\n",laptopid,laptopprice[laptopid]);
    //example: laptop id 0  laptop price = 12230.50
	}
  //takes the input from the user for the index of 0 and 1
  scanf(" %f  %f ", &laptopprice[0],&laptopprice[1]);
  
  //prints the statement
	printf("\n The new price of laptop id : %.2f \t  %.2f\n\n",laptopprice[0],laptopprice[1]);
 
